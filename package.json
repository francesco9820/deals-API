{
  "name": "deals-api",
  "version": "0.0.1",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "nodemon --delay 1000ms --signal SIGTERM --exec ts-node -r tsconfig-paths/register ./src/server/index.ts",
    "dev": "nodemon --delay 1000ms --signal SIGTERM --exec ts-node -r tsconfig-paths/register ./src/server/index.ts",
    "worker": "ts-node -r tsconfig-paths/register ./src/worker/index.ts",
    "test": "vitest --run"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.1.0",
    "@types/swagger-ui-express": "^4.1.8",
    "cors": "^2.8.5",
    "dayjs": "^1.11.18",
    "express": "^5.1.0",
    "express-openapi-validator": "^5.6.0",
    "mongodb": "^6.20.0",
    "mongoose": "^8.18.3",
    "nodemon": "^3.1.10",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.5.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
